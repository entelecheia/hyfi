site_name: {{ friendly_name }}
plugins:
  - search
  - mkdocstrings:
      handlers:
        # See: https://mkdocstrings.github.io/python/usage/
        python:
          options:
            docstring_style: sphinx
markdown_extensions:
  - markdown_include.include:
      base_path: .
  - admonition
theme:
  name: material
  palette:
    scheme: slate
{%- if project_name == 'hyperfast-python-template' %}
extra:
  analytics:
    provider: google
    property: G-0K77490FJT
{%- endif %}
